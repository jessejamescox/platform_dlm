# Server Configuration
NODE_ENV=development
PORT=3000
WS_PORT=3001

# Database
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=your-super-secret-token
INFLUXDB_ORG=wago_dlm
INFLUXDB_BUCKET=charging_data

# Authentication
JWT_SECRET=your-jwt-secret-key

# Load Management Configuration
MAX_GRID_CAPACITY_KW=500
PEAK_DEMAND_THRESHOLD_KW=450
MIN_CHARGING_POWER_KW=3.7
MAX_CHARGING_POWER_PER_STATION_KW=22

# Energy Management
ENERGY_COST_PER_KWH=0.12
PEAK_COST_PER_KWH=0.25
ENABLE_PV_EXCESS_CHARGING=true
ENABLE_LOAD_BALANCING=true

# PV System Configuration
PV_SYSTEM_ENABLED=true
PV_MAX_CAPACITY_KW=100
PV_MQTT_TOPIC=pv/energy/production

# Scheduling
ENABLE_SCHEDULING=true
PRIORITY_BASED_CHARGING=true

# System
LOG_LEVEL=info
DATA_RETENTION_DAYS=90
STATE_PERSISTENCE_INTERVAL=60000

# MQTT Configuration
MQTT_BROKER_URL=mqtt://mqtt:1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Modbus Configuration
MODBUS_HOST=192.168.1.100
MODBUS_PORT=502
